<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="appel_tree_view">
            <field name="name">Enregistrement des appels d'offre</field>
            <field name="model">marche.appel</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="structure"/>
                    <field name="budget"/>
                    <field name="lieu"/>
                    <field name="date_parution"/>
                    <field name="date_limite"/>
                    <field name="fiche"/>
                    <field name="dure"/>
                    <field name="date_depot"/>
                    <field name="state"/>

                </tree>
            </field>
    </record>


    <record model="ir.ui.view" id="appel_form_view">
            <field name="name">Enregistrement des appels d'offre</field>
            <field name="model">marche.appel</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button id="button_soumis" name="action_soumis" string="Soumis" class="btn-primary" type="object" />
                        <button id="button_soumetre" name="action_soumetre" string="Soumetre" class="btn-primary" type="object" />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="structure"/>
                                <field name="budget"/>
                            </group>
                            <group>
                                <field name="lieu"/>
                                <field name="typ"/>
                                <field name="date_depot"/>

                            </group>
                            <group>
                                <field name="date_parution"/>
                                <field name="date_limite"/>
                                <field name="fiche"/>
                            </group>
                            <group>
                                <field name="num_quotidient"/>
                                <field name="page"/>
                                <field name="dure"/>
                                <field name="num_appel"/>
                            </group>
                            <group>

                            </group>
                        </group>
                        <notebook>
                            <page>
                                <field name="dossier"/>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
    </record>


