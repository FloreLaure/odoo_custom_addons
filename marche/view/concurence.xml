<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="concurence_tree_view">
            <field name="name">concurence</field>
            <field name="model">marche.concurence</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="dossier_concurent"/>
                    <field name="budget_concurent"/>
                    <field name="rang"/>
                </tree>
            </field>
    </record>

    <record model="ir.ui.view" id="concurence_form_view">
            <field name="name">concurence</field>
            <field name="model">marche.concurence</field>
            <field name="arch" type="xml">
                <form>
                	<sheet>
                		<group>
		                    <field name="name" style="width:50%"/>
		                    <field name="budget_concurent" style="width:50%"/>
                            <field name="rang"/>
		                </group>
                        <group>
                            <field name="dossier_concurent"/>
                        </group>
		            </sheet>
                </form>
            </field>
    </record>


    



    <record model="ir.actions.act_window" id="concurence_action_view">
        <field name="name">concurence</field>
        <field name="res_model">marche.concurence</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Saisie/Mise Ã  jour des concurrents" id="concuren" parent="marche" action="concurence_action_view"/>

</odoo>