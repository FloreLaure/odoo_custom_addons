<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="structure_tree_view">
            <field name="name">Structure demandeuse</field>
            <field name="model">marche.structure</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="mail"/>

                </tree>
            </field>
    </record>


    <record model="ir.ui.view" id="structure_form_view">
            <field name="name">Structure demandeuse</field>
            <field name="model">marche.structure</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" style="width:50%"/>
                        </group>
                        <group>
                            <field name="phone" style="width:50%"/>
                            <field name="mail" style="width:50%"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>


    <record id="appel_view_search" model="ir.ui.view">
        <field name="name">Rechercher une structure</field>
        <field name="model">marche.structure</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="mail"/>
                <filter string="Without Authors" name="without_mail" domain="[('mail','=',False)]"/>
            </search>
        </field>
    </record>



    <record model="ir.actions.act_window" id="structure_action_view">
            <field name="name">Structure demandeuse</field>
            <field name="res_model">marche.structure</field>
            <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Saisie/Mise Ã  jour des structures" id="structure_appel" parent="marche" action="structure_action_view"/>
    
</odoo>
