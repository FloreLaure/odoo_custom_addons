<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="ListeMarcheSoumis_form_view">
            <field name="name">Marche soumis</field>
            <field name="model">liste.marche.soumis</field>
            <field name="arch" type="xml">
                <form>
                	<sheet>
                		<group>
		                    <field name="dte_debut" style="width:50%"/>
		                    <field name="dte_fin" style="width:50%"/>
		                </group>
		                <group>
		                	<field name="liste_ids" force_save="1">
                                <tree>
                                    <field name="structure_id"/>
                                    <field name="intitule"/>
                                    <field name="type_id"/>
                                    <field name="dte_depot"/>
                                </tree>         
                            </field>
		                </group>
	                </sheet>
                </form>
            </field>
    </record>

    <record model="ir.actions.act_window" id="ListeMarcheSoumis_action_view">
        <field name="name">Marche soumis</field>
        <field name="res_model">liste.marche.soumis</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem name="Synthèse" id="synthese" parent="enregistre_appel" action="ListeMarcheSoumis_action_view"/>

    <menuitem name="Liste des marchés soumis" id="liste_id" parent="synthese" action="ListeMarcheSoumis_action_view"/>


</odoo>
